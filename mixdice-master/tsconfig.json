{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "typeRoots": ["./typings"],
    "paths": {
      "@app/*": ["client/app/*"],
      "@assets/*": ["client/public/assets/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
